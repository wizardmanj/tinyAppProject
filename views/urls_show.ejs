<% include ./partials/_header %>

    <a href='/urls/new'>Create new TinyURL</a>
    
    <h2>My URLs</h2>
    <ul>
        <li><%= shortURL %> - <%= longURL.longURL %></li>
    </ul>
    <form class='form-inline' action='/urls/<%= shortURL %>' method='POST'>
        <div class='form-group mb-2'>
          <label for='shortURL'>Edit URL:</label>
          <input class='form-control' type='text' name='longURL' value='<%= longURL.longURL %>' style='width: 300px; margin: 1em'>
          <button type='submit' class='btn btn-primary'>Submit</button>
        </div>
      </form>
  </body>
</html>